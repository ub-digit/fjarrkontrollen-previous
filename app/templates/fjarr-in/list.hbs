
<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<div class="filter-folders">
				<ul class="nav">
					{{#each item in folder}}
						<li {{bind-attr class="item.active:active"}}><a {{action 'setFolder' item.id}} href="#">{{item.name}}</a></li>
					{{/each}}
					<!--
						<li class="active"><a href="#">Alla ordrar <span class="badge">102</span></a></li>
						<li><a href="#">Mina ordrar <span class="badge">3</span></a></li>
					<li><a href="#">Arkiv <span class="badge">3877</span></a></li>-->
				</ul>
			</div>
		</div>
		<div class="col-xs-10">
			<div class="row">
				<div class="col-xs-4">	
					{{view Ember.Select classNames="form-control" content=controllers.application.locations optionValuePath="content.idInt" optionLabelPath="content.nameSv" value=currentLocation}}
				</div>
				<div class="col-xs-4">
					{{view Ember.Select classNames="form-control" content=controllers.application.statuses optionValuePath="content.idInt" optionLabelPath="content.nameSv" value=currentStatus}}
				</div>
				<div class="col-xs-4">
					<form  id="media-type-filter" class="form" role="form" class="form-inline">
						<label>
							{{loan.name}}
							{{view Ember.Checkbox disabled=loan.disabled checked=loan.active}}
						</label>

						<label>
							{{copy.name}}
							{{view Ember.Checkbox disabled=copy.disabled checked=copy.active}}
						</label>
					</form>
				</div>
			</div>
			<div class="row top-space-30">
				<div class="col-xs-12">
				{{#if model}}
					<table class="table table-striped table-condensed">
				    	<tr>
					    	<th>Ordernummer</th>
					    	<th>L책ntagare</th>
					    	<th>Typ</th>
					    	<th>Titel</th>
					    	<th>Bibliotek</th>
					    	<th>Status</th>
					    	<th>Handl채ggare</th>	
				    	</tr>
						{{#each item in model}}
								<tr>
					    			<td>{{#link-to 'fjarr-in.post' item.id}}{{item.orderNumber}}{{/link-to}} </td>
					    			<td>{{item.name}}</td>
					    			<td>
					    			  {{item.orderType.nameSv}}
					    			</td>
					    			<td>{{trim-string item.title}}</td>
					    			<td>{{item.formLibrary}}</td>
									<td>{{item.status.nameSv}}</td>
									<td>
										{{#if item.user.xkonto }}
											<i {{bind-attr id=item.id}} class="fa fa-spinner"></i>
											<div class="btn-group">
											  <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
											    {{item.user.xkonto}} <span class="caret"></span>
											  </button>
											  <ul class="dropdown-menu" role="menu">
											    <li><a href="#" {{action 'switchOwner' item.id controllers.application.currentUser}} {{controllers.application.currentUser.xkonto}}</a>
											   	</li>
											    <li><a {{action 'removeOwner' item.id}} href="#">Sl채pp order</a></li>	
											  </ul>
											</div>
										{{else}}
											<i {{bind-attr id=item.id}} class="fa fa-spinner"></i>
											<div class="btn-group">
											  <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
											     Ingen <span class="caret"></span>
											  </button>
											  <ul class="dropdown-menu" role="menu">
											    <li><a {{action 'switchOwner' item.id controllers.application.currentUser}} href="#"> {{controllers.application.currentUser.xkonto}}</a></li>
											    <li><a {{action 'removeOwner' item.id}} href="#">Sl채pp order</a></li>		
											  </ul>
											</div>
										{{/if}}
									</td>
					    		</tr>
					    	{{/each}}
				    </table> 
				   {{else}}
				    	<p>Finns inga ordrar att visa</p>
			    	{{/if}}
				</div>
			</div>
		</div>
	</div>

</div>


{{outlet}}
