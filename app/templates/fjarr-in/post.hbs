												{{else}}
													<i class="fa fa-times"></i>
												{{/if}}
											{{/if}}
										</td>
									</tr>
									<tr  title="Ej aktuell efter">
										<th>Ej aktuell efter: </th>
										<td>
											{{#if isEditingGlobalOrder}}
												{{input classNames="form-control" type="text" value=order.notValidAfter}}
											{{else}}
												{{order.notValidAfter}}
											{{/if}}

										</td>
							
									</tr>
									<tr  title="Handläggning">
										<th>Handläggning: </th>
										<td>
											{{#if isEditingGlobalOrder}}
												{{input classNames="form-control" type="text" value=order.deliveryType}}
											{{else}}
												{{order.deliveryType}}
											{{/if}}

										</td>
									</tr>
								</table>
							</div> <!-- end panel --> 
						</div>
					</div>
				</div>
				<div class="col-xs-6">
					<div class="row">
						<div class="col-xs-12">
							<h4>Låntagare</h4>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<div {{bind-attr class="isEditingGlobalOrder:isEditing"}}>
								<table class="table table-striped">
									<tr title="Namn">
