												{{else}}
													<i class="fa fa-times"></i>
												{{/if}}
											{{/if}}
										</td>
									</tr>
									<tr  title="Utanför Norden">
										<th>Utanför Norden: </th>
										<td>
											{{#if isEditingGlobalOrder}}
