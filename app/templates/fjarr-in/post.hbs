<div class="container">
	<div id="topbar-single-order" class="row">
		<div class="col-xs-12">
			{{#link-to 'fjarr-in.index'}}<i class="fa fa-chevron-left"></i> Tillbaka{{/link-to}}
			<div class="topbar-actions pull-right">
				<a target="_blank" href="{{unbound getPrintUrl}}" ><i class="fa fa-print"></i> Skriv ut</a>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-8">
			<div class="row" id="global-settings-order" {{bind-attr class="isEditingGlobalOrder:isEditing"}}>
				<div class="col-xs-12"> 
					<div id="global-settings-order-header" class="row">
						<div class="col-xs-8">
							<h2>{{order.orderNumber}}</h2> 
						</div>
						<div class="col-xs-4 single-order-toolbar" id="global-settings-order-actions">
							{{#if isEditingGlobalOrder}}
								<a href="#" class="btn btn-default btn-sm pull-right" {{action 'saveGlobalOrderMetaData'}}><i class="fa fa-check last"></i> Spara</a>
								<a href="#" class="pull-right btn btn-sm btn-default" {{action 'resetGlobalMetaData'}}><i class="fa fa-times"></i> Stäng</a>
							{{else}}
								<a href="#" class="pull-right btn btn-sm btn-default" {{action 'enterGlobalEditMode'}}><i class="fa fa-pencil last"></i> Editera</a>
							{{/if}}
						</div>
					</div> 
					<form class="form-inline">
						<h4>Handläggande enhet:</h4>
						{{#if isEditingGlobalOrder}}
							{{view Ember.Select classNames="form-control" content=controllers.application.locations optionValuePath="content.id" optionLabelPath="content.nameSv" value=order.locationId}}
						{{else}}
							{{location-name order.locationId}}
						{{/if}}

						<h4>Status: </h4> 
						{{#if isEditingGlobalOrder}}
							 {{view Ember.Select classNames="form-control" content=controllers.application.statuses optionValuePath="content.id" optionLabelPath="content.nameSv" value=order.statusId}}
						{{else}}
							{{status-name order.statusId}}
						{{/if}}
					</form>
				</div>
			</div>
