												{{else}}
													<i class="fa fa-times"></i>
												{{/if}}
											{{/if}}
										</td>
									</tr>
									<tr  title="E-postkvittens">
										<th>E-postkvittens: </th>
										<td>
											{{#if isEditingGlobalOrder}}
