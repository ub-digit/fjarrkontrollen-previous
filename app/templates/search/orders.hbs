<div class="container">
	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	  <form id="search-form">
	    <div class="input-group">
		  {{input type="text" class="form-control" value=query placeholder="Sök efter..."}}
		  <div class="clear-me" {{action 'clearSearch'}}><i class="fa fa-times-circle"></i></div>
	      <span class="input-group-btn">
	        <input class="btn btn-primary form-control" {{action 'search'}} type="submit" value="Sök"></input>
	      </span>
	    </div><!-- /input-group -->
	   </form>
	  </div><!-- /.col-lg-6 -->
	</div><!-- /.row -->


	{{#if model}}
		<table class="table table-striped table-condensed">
		<tr>
			<th {{bind-attr class=":ordernumber"}}>
				Ordernummer
			</th>
			<th>
				<a href="javascript:void();">Låntagare</a>
			</th>
			<th>
				<a href="javascript:void();">Typ</a>
			</th>
			<th>
				<a href="javascript:void();" >Titel</a>

			</th>
			<th>
				Status
	
			</th>
			<th>Handläggare</th>	
		</tr>
		{{#each item in model}}
				<tr>
					<td>{{#link-to 'fjarr-in.post' item.id}}{{item.orderNumber}}{{/link-to}} </td>
					<td>{{trim-string item.name}}</td>
					<td class="ordertype">
					  {{ordertype-name item.orderTypeId}}
					</td>
					<td>{{trim-string item.title}}</td>
					<!--<td>{{item.formLibrary}}</td>-->
					<td>{{status-name item.statusId}}</td>
					<td>
						<i {{bind-attr id=item.id}} class="fa fa-spinner"></i>
						<div class="btn-group">
						  <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
						  {{#if item.userId}}
						  	{{user-name item.userId}} <span class="caret"></span>
						  {{else}}
						  	Ingen <span class="caret"></span>
						  {{/if}}
						  </button>
						  <ul class="dropdown-menu" role="menu">
						    <li><a href="#" {{action 'switchOwner' item.id session.userid}} {{session.username}}</a>
						   	</li>
						    <li><a {{action 'removeOwner' item.id}} href="#">Släpp order</a></li>	
						  </ul>
						</div>
					</td>
				</tr>
			{{/each}}
		</table> 
	{{else}}
		<p>Finns inga ordrar att visa på din sökning..</p>
	{{/if}}

	<div class="result-list">
		{{#each item in model}}
			{{item.name}} <br>
		{{/each}}
	</div>
</div>