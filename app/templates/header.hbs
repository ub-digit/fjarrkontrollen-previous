<header>
	<div class="container">
		<div class="row">
			<div class="col-xs-10">
				<div class="brand">
					<div class="logo hidden-xs">
						<a href="/" title="Göteborgs universitet">
							<img src="http://medarbetarportalen.gu.se/digitalAssets/1498/1498145_ny_logo_sv_high.png" alt="">
						</a>
					</div>
					<div class="headers">
						<a href="/" class="level1">Göteborgs Universitetsbibliotek</a>
						<div class="level2">Fjärrkontrollen</div>
					</div>
				</div>
			</div>
			<div class="col-xs-2">
				<div class="user-auth">
					{{#if session.isAuthenticated}}
				      	<p class="pull-right">{{session.name}} (<small><a href="javascript:void(0)" {{action 'invalidateSession'}}>Logout</a></small>)</p>
				        

				      {{else}}
							<p class="pull-right">{{link-to "Login" 'login'}}</p>
				     {{/if}}
			     </div>
			</div>
		</div>
	</div>



</header>
