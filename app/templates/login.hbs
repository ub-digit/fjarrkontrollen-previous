<div class="container">
  {{#if error}}

  {{/if}}
  <div class="panel panel-default col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
    <div class="panel-body">
  <form {{action 'authenticate' on='submit'}} role="form">
    <div class="form-group">
      <h3>Logga in i Fjärrkontrollen</h3>
      <label for="identification" class="sr-only">X-konto</label>
      {{input id="input-account" value=identification classBinding=":form-control :inputfield" placeholder='X-konto (exempel xrasto)'}}
    </div>
    <div class="form-group">
      <label for="password" class="sr-only">Lösenord</label>
      {{input id="input-password" value=password classBinding=":form-control" placeholder='Lösenord' type='password'}}
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
  </form>
  </div>
  </div>
</div>
