

{{#ic-modal
  open-when=barcodeIsVisible
   close-when=barcodeIsHidden
  id="barcode-form"
}}
<form>
  {{#ic-modal-title}}<h4>Scanna Streckkod p√• ordern</h4>{{/ic-modal-title}}
  <fieldset>
    <label for="name">Streckkod</label>
    {{input class="form-control" id="name" value=orderNumber placeholder="Scanna streckkod (exempel: 20140520-151602.16)"}}
  </fieldset>

  <!-- and put your buttons in the footer -->
  <br>
  {{#if error}}
    <div class="alert alert-danger" role="alert">
    <i class="fa fa-exclamation-triangle"></i>
    <span class="sr-only">Fel:</span>
    Ingen order med detta ordernummer kunde hittas. 
  </div>
  {{/if}}
  <fieldset>
    <!-- when "awaiting-return-value" is true, "saving" will be also -->
      <button {{bind-attr class=":btn :btn-success isEnabled:enabled:disabled"}} type="submit" {{action 'submitBarcodeForm'}}>Skicka</button>
  </fieldset>
</form>
{{/ic-modal}}